	name = "Koran"
	icon_state = "koran"
	item_state = "koran"
	deity_name = "Allah"

/obj/item/storage/book/bible/torah
	name = "Torah"
	icon_state = "torah"
	item_state = "torah"
	deity_name = "YHWH"
